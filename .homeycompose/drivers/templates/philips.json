{
	"class": "tv",
	"capabilities": [
		"onoff",
		"volume_mute",
		"volume_up",
		"volume_down",
		"channel_up",
		"channel_down"
	],
	"$flows": {
		"triggers": [
			{
				"id": "{{driverId}}:cmd_received",
				"title": {
					"en": "Button is Pressed",
					"nl": "Knop is Ingedrukt"
				},
				"args": [
					{
						"name": "cmd",
						"type": "autocomplete"
					}
				]
			}
		],
		"actions": [
			{
				"id": "{{driverId}}:send_cmd",
				"title": {
					"en": "Send Command",
					"nl": "Verzend Commando"
				},
				"args": [
					{
						"name": "cmd",
						"type": "autocomplete"
					}
				]
			},
			{
				"id": "{{driverId}}:send_cmd_number",
				"title": {
					"en": "Set Channel",
					"nl": "Zet op Kanaal"
				},
				"args": [
					{
						"name": "number",
						"type": "number",
						"min": 0,
						"max": 9999
					}
				]
			}
		]
	}
}
